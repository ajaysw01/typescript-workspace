{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",                                  /* Set the JavaScript language version for emitted JavaScript. */
    "module": "ES2022",                                  /* Specify what module code is generated. */
    "rootDir": "./ts",                                   /* Specify the root folder for source files. */
    "outDir": "./dist",                                  /* Specify the output folder for all emitted files. */
    "sourceMap": true,                                   /* Create source map files for debugging. */
    "removeComments": true,                              /* Disable emitting comments in output. */
    "noEmitOnError": true,                               /* Disable emitting files if any type errors occur. */
    "esModuleInterop": true,                             /* Enable compatibility for CommonJS modules. */
    "forceConsistentCasingInFileNames": true,            /* Ensure consistent file name casing. */
    "strict": true,                                      /* Enable all strict type-checking options. */
    "skipLibCheck": true                                 /* Skip type checking of declaration files. */
  },
  "include": ["ts/**/*.ts"]                              /* Include all .ts files in the 'ts' folder. */
}
